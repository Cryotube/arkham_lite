; Engine configuration file.
; It's best edited using the editor UI and not directly from scripts.
; If you need to make changes, hesitate to do so, as incorrect
; modifications can cause libary corruption.

config_version=5

[application]
config/name="Bermuda Sector"
run/main_scene="res://scenes/core/bootstrap.tscn"
config/features=PackedStringArray("4.0", "Forward+", "Mobile")

[autoload]
GameDirector="*res://scripts/core/game_director.gd"
TurnManagerSingleton="*res://scripts/systems/turn_manager.gd"
DicePoolCache="*res://scripts/systems/dice_pool_cache.gd"
SaveService="*res://scripts/services/save_service_stub.gd"
ResourceLedger="*res://scripts/autoload/resource_ledger.gd"
RoomQueueService="*res://scripts/services/room_queue_service.gd"
ThreatService="*res://scripts/services/threat_service.gd"
EventResolver="*res://scripts/services/event_resolver.gd"
EquipmentInventoryModel="*res://scripts/services/equipment_inventory_model.gd"
LootService="*res://scripts/services/loot_service.gd"
TelemetryHub="*res://scripts/services/telemetry_hub.gd"
TutorialService="*res://scripts/services/tutorial_service.gd"

[input]
roll_dice={
"deadzone": 0.5,
"events": [
{ "type": "key", "keycode": 32 },
{ "type": "joy_button", "button_index": 0 },
{ "type": "mouse_button", "button_index": 1 }
]
}
confirm_action={
"deadzone": 0.5,
"events": [
{ "type": "key", "keycode": 4194309 },
{ "type": "joy_button", "button_index": 7 }
]
}
cancel_action={
"deadzone": 0.5,
"events": [
{ "type": "key", "keycode": 4194305 },
{ "type": "joy_button", "button_index": 6 }
]
}
lock_die={
"deadzone": 0.5,
"events": [
{ "type": "key", "keycode": 76 },
{ "type": "joy_button", "button_index": 2 }
]
}
reroll_selection={
"deadzone": 0.5,
"events": [
{ "type": "key", "keycode": 82 },
{ "type": "joy_button", "button_index": 3 }
]
}
open_equipment={
"deadzone": 0.5,
"events": [
{ "type": "key", "keycode": 69 }
]
}
open_rooms={
"deadzone": 0.5,
"events": [
{ "type": "key", "keycode": 81 }
]
}
navigate_left={
"deadzone": 0.5,
"events": [
{ "type": "key", "keycode": 4194319 },
{ "type": "joy_axis", "axis": 0, "axis_value": -1.0 }
]
}
navigate_right={
"deadzone": 0.5,
"events": [
{ "type": "key", "keycode": 4194321 },
{ "type": "joy_axis", "axis": 0, "axis_value": 1.0 }
]
}

[rendering]
renderer/rendering_method="forward_plus"

[editor_plugins]
enabled=PackedStringArray("gut")
